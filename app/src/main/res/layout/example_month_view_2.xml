<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="@dimen/space_base"
        app:cardCornerRadius="@dimen/space_base"
        app:contentPadding="8dp">

        <com.fallgamlet.calendar.MonthView
            android:id="@+id/monthView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cc_monthButtonTint="@color/button_color_list"
            app:cc_monthButtonSize="48dp"
            app:cc_monthButtonPadding="4dp"
            app:cc_monthButtonMargin="2dp"
            app:cc_monthTextAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            app:cc_monthTextTint="?colorPrimary"
            app:cc_weekDayTextAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:cc_weekDayTextTint="#BA5961"
            app:cc_weekHeaderDividerTint="#50E4E100"
            app:cc_weekHeaderHeight="8dp"
            app:cc_monthDayTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:cc_monthDayTextTint="#009688"
            app:cc_monthDayOtherTextAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:cc_monthDayOtherTextTint="#8F6C00"
            />

    </androidx.cardview.widget.CardView>

</ScrollView>
